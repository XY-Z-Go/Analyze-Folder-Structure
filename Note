        size += os.path.getsize(fp)

#Acquire sub_folder
  
  import os
  dir_path = "***"
  files_dir = [ folder for folder in os.listdir(dir_path) if os.path.isdir(os.path.join(dir_path, folder))]
  sub_folders = [os.path.join(dir_path, f_dir) for f_dir in files_dir]
  print(sub_folders)
  
